<script src="~/js/application.js"></script>
<link href="~/css/application.css" rel="stylesheet" />
<br />
<br />
<h4>All Flights</h4>
<form method="post">
    <button style="float: right;" type="submit" onclick="on()">Refresh</button>
    <br /><br />
    <div style="height: 500px;overflow: scroll;">
        <div id="overlay" onclick="off()">
            <div class="w-100 d-flex justify-content-center align-items-center">
                <div class="spinner"></div>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.flightRecords != null)
                {
                    foreach (var record in Model.flightRecords)
                    {
                        <tr>
                            <td> @record.Id </td>
                            <td>@record.flight_date</td>
                            <td>@record.flight_status</td>
                            <td>
                                <!-- <snippet_Edit> -->
                                <a asp-page="./Details" asp-route-id="@record.Id">Details</a>
                                <!-- </snippet_Edit> -->
                                <!-- <snippet_Delete> -->
                                @*<button type="submit" asp-page-handler="delete" asp-route-id="@record.Id">delete</button>*@
                                <!-- </snippet_Delete> -->
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</form>

